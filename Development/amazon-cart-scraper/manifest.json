{
  "manifest_version": 3,
  "name": "Amazon Cart Scraper",
  "version": "1.0.0",
  "description": "Scrape your Amazon shopping cart and export to CSV",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.*/*"
  ],
  "action": {
    "default_popup": "popup_NonPrime.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}